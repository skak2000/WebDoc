            @Html.EditorFor(model => model.Word5, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Word5, "", new { @class = "text-danger" })
        </div>
    </div>


    @Html.HiddenFor(model => model.DocTemplateId)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
