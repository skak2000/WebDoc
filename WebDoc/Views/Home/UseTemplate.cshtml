@model Model.DocTemplate

@{
    ViewBag.Title = "UseTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Use template</h2>

<p style="padding-top:20px">@Html.ActionLink("Get example", "GetTemplateById", new { docTemplateId = Model.DocTemplateId } , new { @class = "btn btn-success" })</p>

