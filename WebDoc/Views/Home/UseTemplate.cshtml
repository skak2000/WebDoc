                @Html.EditorFor(model => model.Pdf)
                @Html.ValidationMessageFor(model => model.Pdf, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Word1, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
